<p id="notice"><%= notice %></p>
<div class="row ">
  <div class="col-md-4">
    <h1>Categories</h1>
  </div>
  <div class="col-md-4">
    <%= search_form_for @ransack_category, url: categories_path, as: :categories_search, html: {class: "form-inline"} do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, class: 'form-control', placeholder: 'Find a Category', autocomplete: :off %>
        <div class="input-group-append">
          <%= button_tag(type: 'submit', class: 'btn btn-outline-secondary') do %>
            <i class="fa fa-search"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4 float-right">
    <%= link_to 'New Category', new_category_path , class:"btn btn-outline-secondary float-right"%>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to category, title: 'View category ' do %>
          <i class="fa fa-circle-info text-info" data-toggle="tooltip" data-placement="top"></i>
          <% end %>
        </td>

        <td><%= link_to edit_category_path(category), title: 'Edit category' do %>
          <i class="fa fa-pen-to-square" data-toggle="tooltip" data-placement="top"></i>
          <% end %>
        </td>

        <td><%= link_to category, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete category' do %>
          <i class="far fa-trash-can" data-toggle="tooltip" data-placement="top"></i>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>




<div class="d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>




