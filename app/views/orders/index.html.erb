<h1>Orders</h1>

<table class="w-100">
  <thead>
    <tr>
      <th>Order No.</th>
      <th>User Name</th>
      <th>Email</th>
      <th>Order Date</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user.first_name %> <%= order.user.last_name %></td>
        <td><%= order.user.email %></td>
        <td><%= order.created_at.to_date %></td>
        <td><%= order.order_items.count %></td>
        <td><%= number_to_currency(order.sub_total, unit: 'â‚¹') %></td>
        <td></td>
        <td><%= link_to "show", order, class:"btn btn-outline-secondary"%></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>


