<div class="container" style="overflow-x: auto;">
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Sl.no.</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <% if current_user.role.name=='superadmin' || current_user.role.name =='principal' %>
            <th scope="col" colspan="2" class=" text-center">Action</th>
        <% end %>
        </tr>
    </thead>
        <%@count=0%>
    <tbody>
        <% @customers.each do |customer| %>
            <%@count=@count+1%>
        <tr>
            <th scope="row"><%= @count%></th>
            <td><%= customer.first_name %> <%= customer.last_name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone_number %></td>
            
            <% if current_user.role.name=='admin' %>
                <td><%= link_to 'Show', customers_path(customer) ,class:"btn btn-outline-success" %></td>
                <td><%= link_to 'Delete', customers_path(customer), method: :destroy, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>