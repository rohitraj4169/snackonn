<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, autocomplete: 'name', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: 'form-control' %>
  </div>
  <div class="row">
    <div class="form-group col-md-6">
      <%= form.label :weight %>
      <%= form.number_field :weight, class: 'form-control', step: "0.01" %>
    </div>

    <div class="form-group">
    <%= form.label :unit %>
    <div >
      <%= form.select :unit, ['kg', 'g', 'L', 'ml', 'pouch', 'pics', 'others'], prompt: true %>
    </div>
  </div>

  </div>

  <div class="form-group">
    <%= form.label :stock %>
    <%= form.number_field :stock, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>
    <div >
      <%= form.collection_select :category_id, Category.all, :id, :name, prompt: true %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.check_box :status %>
  </div>
  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
